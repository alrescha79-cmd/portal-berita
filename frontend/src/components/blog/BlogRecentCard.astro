---
import LeftSection from "@components/ui/sections/LeftSection.astro";
import RightSection from "@components/ui/sections/RightSection.astro";

const { blogs = [] } = Astro.props;

interface Props {
    blogs: Array<{
        title: string;
        description: string;
        slug: string;
        thumbnailURL: string;
        banner2?: string;
    }>;
}

const posts = Array.isArray(blogs) ? blogs.slice(0, 5) : [];
---

{
    posts.map((b, index) =>
        index % 2 === 0
? (
            <LeftSection
                title={b.title}
                subTitle={b.description}
                btnExists={true}
                btnTitle="Read More"
                btnURL={`/posts/${b.slug}`}
                img={b.thumbnailURL}
                imgAlt={b.title}
            />
        )
: (
            <RightSection
                title={b.title}
                subTitle={b.description}
                btnExists={true}
                btnTitle="Read More"
                btnURL={`/posts/${b.slug}`}
                img={b.thumbnailURL}
                imgAlt={b.title}
                single={!b.banner2}
                imgOne={b.thumbnailURL}
                imgOneAlt={b.title}
                imgTwo={b.banner2}
                imgTwoAlt={b.title}
            />
        ),
    )
}
